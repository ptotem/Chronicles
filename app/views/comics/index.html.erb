<style type="text/css">

    h1{
      color: #ffffff;
    }

    table, th, tr, td{
        color: #ffffff;
        text-align: center;
    }

    a:link {color:#ffffff;}
    a:visited {color:#ffffff;}
    a:hover {color:#ffffff;}
    a:active {color:#ffffff;}

</style>
<h1>Listing comics</h1>

<table cellspacing="10" cellpadding="10" width="360px">
  <tr>
    <th>Comic Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comics.each do |comic| %>
  <tr>
    <td><%= comic.name %></td>
    <td><%= link_to 'Show', comic %></td>
    <td><%= link_to 'Edit', edit_comic_path(comic) %></td>
    <td><%= link_to 'Destroy', comic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Comic', new_comic_path %>
